<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.agentdetail.view.AgentDetailFragment">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageBackground"
                    android:layout_width="400dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:id="@+id/agentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_margin="15dp"
                    />
                <TextView
                    android:id="@+id/agentDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"

                    />
               <LinearLayout
                   android:id="@+id/linearLayoutRole"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/imageRole"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_margin="15dp"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:id="@+id/roleName"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=""
                           android:textSize="20sp"
                           android:textStyle="bold"
                           android:layout_margin="5dp"/>
                       <TextView
                           android:id="@+id/roleDesc"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20sp"
                           android:layout_margin="5dp"/>
                   </LinearLayout>



               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ability1View"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="15dp"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/ability1Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textStyle="bold"
                                android:layout_margin="15dp"
                                android:textSize="25sp"/>
                            <TextView
                                android:id="@+id/ability1Desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="desc"
                                android:layout_margin="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ability2View"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="15dp"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/ability2Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textStyle="bold"
                                android:layout_margin="15dp"
                                android:textSize="25sp"/>
                            <TextView
                                android:id="@+id/ability2Desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="desc"
                                android:layout_margin="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ability3View"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="15dp"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/ability3Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textStyle="bold"
                                android:layout_margin="15dp"
                                android:textSize="25sp"/>
                            <TextView
                                android:id="@+id/ability3Desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="desc"
                                android:layout_margin="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ability4View"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="15dp"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/ability4Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:layout_margin="15dp"
                                android:textSize="25sp"/>
                            <TextView
                                android:id="@+id/ability4Desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="desc"
                                android:layout_margin="15dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBarDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/errorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasdasd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>